<% if current_admin %>
<div class="content">
<div class="create-link"><%= link_to 'Back', cohorts_path %></div>
<p id="notice"><%= notice %></p>

<div class="profile">
<p>
  <strong>Name:</strong>
  <%= @cohort.name %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @cohort.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @cohort.end_date %>
</p>

<p>
  <strong>Course:</strong>
  <%= @cohort.course.name %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= Teacher.first.first_name%> <%= Teacher.first.last_name%>
</p>

<p>
  <strong>Number of Students:</strong>
  <%= @cohort.students.count %>
</p>


<div class="create-link"><%= link_to 'Edit', edit_cohort_path(@cohort) %></div>


</div>

</div>
<% end %>
