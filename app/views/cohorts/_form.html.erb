<%= form_with(model: cohort, local: true) do |form| %>
  <% if cohort.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cohort.errors.count, "error") %> prohibited this cohort from being saved:</h2>

      <ul>
      <% cohort.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="edit-form">
  <div class="edit-section">
    <div class="item-tag">
    <%= form.label :name %></div>
    <div class="field"><%= form.text_field :name %>
  </div>
</div>


<div class="edit-section">
  <div class="item-tag">
  <%= form.label :start_date %></div>
  <div class="field"><span class="date"><%= form.date_select :start_date %></span>
</div>
</div>


<div class="edit-section">
  <div class="item-tag">
  <%= form.label :end_date %></div>
  <div class="field"><span class="date"><%= form.date_select :end_date %></span>
</div>
</div>

<div class="edit-section">
  <div class="item-tag">
  <%= form.label :class_hours %></div>
  <div class="field"><span class="date"><%= form.time_select :class_hours, :ignore_date => true %></span> -
    <span class="date"><%= form.time_select :class_hours, :ignore_date => true %></span>
</div>
</div>


<div class="edit-section">
  <div class="item-tag">
  <%= form.label :course_id %></div>
  <div class="field">
      <%= form.collection_select :course_id, Course.all, :id, :name, prompt: 'Select a Course'%>
  </div>
</div>

<div class="edit-section">
  <div class="item-tag">
  <%= form.label :teacher_id %></div>
  <div class="field">
      <%= form.collection_select :teacher_id, Teacher.all, :id, :first_name, prompt: 'Select a Teacher'%>
  </div>
</div>


  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
