<div class="content">
<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>
<h2>Total Number of Cohorts: <%= @cohorts.count %></h2>
<table class="list-all">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Course</th>
      <th>Teacher</th>
      <th>Students</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.end_date %></td>
        <td><%= cohort.course %></td>
        <td><%= cohort.teacher %></td>
        <td><%= cohort.student %></td>
        <td><%= link_to teacher do %><%= image_tag('view.png') %>
      <% end %></td>
      <td><%= link_to edit_teacher_path(teacher) do %><%= image_tag('edit.png') %>
      <% end %></td>
      <td><%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' } do %><%= image_tag('rubbish-bin.png') %>
      <% end %></td>      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="create-link"><%= link_to 'New Cohort', new_cohort_path %></div>
</div>
