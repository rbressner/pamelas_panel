<nav>
  <h4><%= @admin.last_name %>, <%= @admin.first_name %></h4>
  <ul class="admin-nav">
    <% @admins.each do |admin| %>
        <li><%= link_to 'Home', admins_path %></li>
        <li><%= link_to 'Profile', @admin %></li>
        <li><%= link_to 'Teachers', teachers_path %></li>
        <li><%= link_to 'Students', students_path %></li>
        <li><%= link_to 'Courses', courses_path %></li>
        <li><%= link_to 'Cohorts', cohorts_path %></li>
    <% end %>
  </ul>
</nav>

<div class="content">
<h1>Teachers</h1>



<table class="list-all">

  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Salary</th>
      <th>Education</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.username %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.age %></td>
        <td><%= teacher.salary %></td>
        <td><%= teacher.education %></td>
        <td><%= link_to teacher do %><%= image_tag('view.png') %>
      <% end %></td>
      <td><%= link_to edit_teacher_path(teacher) do %><%= image_tag('edit.png') %>
      <% end %></td>
      <td><%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' } do %><%= image_tag('rubbish-bin.png') %>
      <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="create-link"><%= link_to 'New Teacher', new_teacher_path %></div>
</div>
